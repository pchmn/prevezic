{
  "name": "@prevezic/functions",
  "version": "0.0.0",
  "private": true,
  "author": "pchmn",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "esbuild": "esbuild `find ./src \\( -name '*.ts' \\)` --minify --platform=node --target=node16.0 --format=cjs --outdir=dist",
    "serve": "pnpm run build && firebase emulators:start --only functions",
    "shell": "pnpm run build && firebase functions:shell",
    "start": "pnpm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.0"
  },
  "devDependencies": {
    "@prevezic/tsconfig": "workspace:*",
    "esbuild": "^0.15.15",
    "eslint-config-prevezic-ts": "workspace:*",
    "firebase-functions-test": "^0.2.0",
    "typescript": "^4.6.4"
  }
}
